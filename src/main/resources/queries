create table departments (
  id serial,
  dep_name text not null,
  creation_date date,
  id_parent_department integer,
  primary key (id),
  foreign key (id_parent_department) references departments (id),
  unique (dep_name)
);

create table positions (
  id serial,
  position text not null,
  primary key (id),
  unique (position)
);

create table genders (
  id serial,
  gender text not null,
  primary key (id),
  unique (gender),
  check (id <= 2)
);

create sequence employees_id_seq;
create table employees (
  id int not null default nextval('employees_id_seq'),
  surname text not null,
  name text not null,
  patronymic text,
  id_gender int not null,
  birthday date not null,
  phone_number varchar(20) not null,
  email char(30) not null,
  employment_date date not null,
  dismissal_date date,
  idPosition int not null,
  payment int not null,
  is_manager boolean default false,
  id_department integer not null,
  primary key (id),
  foreign key (id_department) references departments(id),
  foreign key (idPosition) references positions(id),
  foreign key (id_gender) references genders(id)
);

